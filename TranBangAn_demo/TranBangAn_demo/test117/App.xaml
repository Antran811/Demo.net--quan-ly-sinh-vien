<Application x:Class="test117.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:test117"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ControlTemplate x:Key="btn_tron" TargetType="Button">
            <Grid>
                <Border Background="CornflowerBlue" CornerRadius="50"></Border>
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
            </Grid>
            
        </ControlTemplate>
        <Style x:Key="btn_key" TargetType="Button">
            <Setter Property="Template" Value="{StaticResource btn_tron}"></Setter>
            <Setter Property="Foreground" Value="Black"></Setter>
        </Style>
    </Application.Resources>
</Application>
